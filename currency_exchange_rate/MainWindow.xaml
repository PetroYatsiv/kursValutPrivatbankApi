            <TextBox x:Name="textBox2" HorizontalAlignment="Left" Height="23" Margin="10,142,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="80"/>
            <TextBox x:Name="textBox4" HorizontalAlignment="Left" Height="23" Margin="10,168,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="80"/>
            <Label x:Name="label6" Content="USD" HorizontalAlignment="Left" Margin="95,87,0,0" VerticalAlignment="Top"/>
            <Label x:Name="label6_Copy" Content="EUR" HorizontalAlignment="Left" Margin="95,113,0,0" VerticalAlignment="Top"/>
            <Label x:Name="label6_Copy1" Content="RUB" HorizontalAlignment="Left" Margin="95,139,0,0" VerticalAlignment="Top"/>
            <Label x:Name="label6_Copy2" Content="UAH" HorizontalAlignment="Left" Margin="95,163,0,0" VerticalAlignment="Top"/>
            <Button x:Name="button" Content="Розрахувати" HorizontalAlignment="Left" Margin="144,166,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        </Grid>
        <Grid x:Name="LeftGrid" Margin="10,10,0,0" Background="#FFEE9E9E" Height="199" VerticalAlignment="Top" HorizontalAlignment="Left" Width="237" Loaded="LeftGrid_Loaded">
            <Label x:Name="label3" Content="Валюта:" HorizontalAlignment="Left" Margin="10,21,0,0" VerticalAlignment="Top"/>
            <Label x:Name="label4" Content="Купівля" HorizontalAlignment="Left" Margin="90,20,0,0" VerticalAlignment="Top"/>
            <Label x:Name="label5" Content="Продаж" HorizontalAlignment="Left" Margin="163,20,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="textBox3" HorizontalAlignment="Left" Height="23" Margin="10,41,0,0" TextWrapping="Wrap" Text="USD" VerticalAlignment="Top" Width="61"/>
            <TextBox x:Name="textBox3_Copy" HorizontalAlignment="Left" Height="23" Margin="10,69,0,0" TextWrapping="Wrap" Text="EUR" VerticalAlignment="Top" Width="61"/>
            <TextBox x:Name="textBox3_Copy1" HorizontalAlignment="Left" Height="23" Margin="10,97,0,0" TextWrapping="Wrap" Text="RUB" VerticalAlignment="Top" Width="61"/>
            <TextBox x:Name="textBox3_Copy2" HorizontalAlignment="Left" Height="23" Margin="86,41,0,0" TextWrapping="Wrap" Text="USD" VerticalAlignment="Top" Width="61"/>
            <TextBox x:Name="textBox3_Copy3" HorizontalAlignment="Left" Height="23" Margin="161,41,0,0" TextWrapping="Wrap" Text="USD" VerticalAlignment="Top" Width="61"/>
