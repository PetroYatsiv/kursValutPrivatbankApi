            </Grid>
            <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="166,47,0,0" VerticalAlignment="Top" Width="61" Height="23">
                <ComboBoxItem IsSelected="True">USD</ComboBoxItem>
                <ComboBoxItem>EUR</ComboBoxItem>
                <ComboBoxItem>UAH</ComboBoxItem>
                <ComboBoxItem>RUB</ComboBoxItem>
            </ComboBox>
            <Label x:Name="label1" Content="Суму" HorizontalAlignment="Left" Margin="10,43,0,0" VerticalAlignment="Top" Height="29"/>
            <TextBox x:Name="textBoxSuma" HorizontalAlignment="Left" Height="23" Margin="52,47,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="109" />
            <Label x:Name="label2" Content="Результат:" HorizontalAlignment="Left" Margin="10,67,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="10,90,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="80"/>
