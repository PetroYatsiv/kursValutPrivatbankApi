        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:currency_exchange_rate"
        mc:Ignorable="d"
        Title="Курс обміну валюти" Height="252.901" Width="516.312">
    <Grid Margin="0,0,0,3">
        <Grid x:Name="RightGrid" Height="199" Margin="261,10,0,0" VerticalAlignment="Top" Background="#FFEE9E9E" HorizontalAlignment="Left" Width="237">
