            <TextBox x:Name="textBox3_Copy6" HorizontalAlignment="Left" Height="23" Margin="86,97,0,0" TextWrapping="Wrap" Text="USD" VerticalAlignment="Top" Width="61"/>
            <TextBox x:Name="textBox3_Copy7" HorizontalAlignment="Left" Height="23" Margin="161,97,0,0" TextWrapping="Wrap" Text="USD" VerticalAlignment="Top" Width="61"/>
            <TextBox x:Name="textBox3_Copy8" HorizontalAlignment="Left" Height="23" Margin="10,41,0,0" TextWrapping="Wrap" Text="USD" VerticalAlignment="Top" Width="61"/>
        </Grid>

    </Grid>
